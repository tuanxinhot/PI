  <item label="Power management">
    <action name="Execute">
      <command>
        sudo /menu/schedule.sh
      </command>
    </action>
  </item>
  <item label="Show virtual keyboard">
    <action name="Execute">
      <command>
        sudo /menu/onboard.sh
      </command>
    </action>
  </item>
  <separator/>
   <item label="Manage VNC user">
    <action name="Execute">
      <command>
        /menu/manage_user.sh.x
      </command>
    </action>
  </item> 
  <item label="Screenshot (3 secs delayed)">
    <action name="Execute">
      <command>
        /bin/bash /menu/screenshot.sh 3
      </command>
    </action>
  </item>
  <separator/>
  <item label="Reboot">
    <action name="Execute">
      <command>
        /bin/bash /menu/reboot.sh
      </command>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <command>
        /bin/bash /menu/shutdown.sh
      </command>
    </action>
  </item>
  <separator/>
  <item label="About">
    <action name="Execute">
      <command>
        /bin/bash /menu/about.sh
      </command>
    </action>
  </item>
</menu>

</openbox_menu>
